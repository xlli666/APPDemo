<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <xies.academy.hebuni.com.cateringordersystem.util.PubTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_cate_img"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:contentDescription="@string/img_description" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_cate_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_left_right"
            android:text=""
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_cate_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_left_right"
            android:text=""
            android:textColor="@color/white"
            android:textSize="22sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_cate_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/margin_left_right"
        android:paddingStart="@dimen/margin_left_right"
        android:paddingTop="@dimen/edit_text_padding"
        android:text=""
        android:textSize="@dimen/large_text" />

</LinearLayout>